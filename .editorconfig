# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
shell = bash

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# TOML files
[*.toml]
indent_style = space
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Batch files
[*.bat]
end_of_line = crlf

# Windows ini files
[*.ini]
indent_style = space
indent_size = 4

# CSS, SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# HTML, XML
[*.{html,xml}]
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

# SQL
[*.sql]
indent_style = space
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# Git ignore files
[.gitignore]
indent_style = space
indent_size = 4

# Editor specific files
[.vscode/*]
indent_style = space
indent_size = 2
